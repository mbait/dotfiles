#!/bin/sh

PYGMENTIZE='pygmentize -f 256 -O style=rrt'

case `basename "$1"` in
  *.c|*.cc|*.clj|*.cpp|*.el|*.h|*.java|*.js|*.php|*.py|*.sh|*.sql|*.tcl)
    $PYGMENTIZE "$1" | awk '{printf "%3dâ”ƒ%s\n",NR,$0}';;
  *.md|README|ReleaseLog)
    pandoc -s -t html "$1" | w3m -T text/html -cols $(tput cols) -dump;;
  TARGETS)
    $PYGMENTIZE -l py "$1";;
  *)
    exit 1;;
esac

exit $?
